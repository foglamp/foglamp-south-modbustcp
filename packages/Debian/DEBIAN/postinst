##--------------------------------------------------------------------
##
## @postinst DEBIAN/postinst
## This script is used to execute post installation tasks.
##
## Author: Praveen Garg
##
##--------------------------------------------------------------------

set -e

install_deps () {
    pip3 install -Ir /usr/local/foglamp/python/requirements-modbustcp.txt --no-cache-dir
}

set_files_ownership () {
    chown -R root:root /usr/local/foglamp/python/foglamp/plugins/south/modbustcp
}

add_service () {
    output=$(curl -sX POST http://localhost:8081/foglamp/service -d '{"name": "Modbus TCP", "type": "south", "plugin": "modbustcp", "enabled": true}')
    echo ${output}
}


install_deps
set_files_ownership
add_service
echo "Modbus TCP plugin installed."
